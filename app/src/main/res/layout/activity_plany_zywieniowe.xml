<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanyZywieniowe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/planZwyieniowy1Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan żywieniowy #1" />

        <Button
            android:id="@+id/planZwywieniowy2Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan żywieniowy #2" />

        <Button
            android:id="@+id/planZywieniowy3Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan żywieniowy #3" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>